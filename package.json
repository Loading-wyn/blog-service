{
  "name": "blog-service",
  "description": "API gateway for Wang Yinan's blog",
  "author": "Wang Yinan",
  "contributors": [],
  "version": "0.1.0",
  "main": "server.js",
  "scripts": {
    "lint": "eslint server/**/*.js",
    "build:server": "babel server --out-dir build --source-maps",
    "build": "if [ -d build ]; then rm -r build; fi; npm run build:server",
    "test:nobuild": "mocha build/**/*.spec.js",
    "test": "npm run build && npm run test:nobuild",
    "start": "npm run build && node server.js",
    "dev": "set AUTO_RESTART=no && CUSTOM_CMD=npm run start&& docker-compose -f configs/docker-compose-dev.yml up",
    "dev:test": "set AUTO_RESTART=no && set CUSTOM_CMD=npm run test&& docker-compose -f configs/docker-compose-dev.yml up",
    "dev:rebuild": "docker rmi floducer-service ; npm run dev:test",
    "dev:reset": "docker rm -f configs_floducer-service_1 configs_floducer-redis_1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=7.0.0"
  },
  "dependencies": {
    "aliyun-sdk": "^1.9.15",
    "babel-cli": "^6.18.0",
    "babel-plugin-syntax-trailing-function-commas": "^6.20.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-polyfill": "^6.20.0",
    "babel-preset-react": "^6.16.0",
    "babel-runtime": "^6.20.0",
    "bcrypt": "^1.0.1",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect-flash": "^0.1.1",
    "connect-timeout": "^1.8.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "csurf": "^1.9.0",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.1.0",
    "express-validator": "^3.1.0",
    "express-winston": "^2.1.0",
    "helmet": "^3.1.0",
    "hifetch": "^1.4.1",
    "ioredis": "^2.4.3",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.2",
    "method-override": "^2.3.7",
    "mime-types": "^2.1.13",
    "moment": "^2.17.1",
    "mongoose": "^4.7.2",
    "morgan": "^1.7.0",
    "multer": "^1.2.1",
    "node-schedule": "^1.2.0",
    "uuid": "^3.0.1",
    "numeral": "^2.0.1",
    "oneapm": "^1.2.20",
    "qs": "^6.3.0",
    "raw-body": "^2.1.7",
    "request": "^2.79.0",
    "response-time": "^2.3.2",
    "serialize-javascript": "^1.3.0",
    "useragent": "^2.1.9",
    "validator": "^6.2.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "chai": "^3.5.0",
    "chance": "^1.0.4",
    "cz-conventional-changelog": "^1.2.0",
    "debug": "^2.4.4",
    "errorhandler": "^1.5.0",
    "eslint": "^3.12.2",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-react": "^6.8.0",
    "ghooks": "^1.3.2",
    "mocha": "^3.2.0",
    "supertest": "^2.0.1"
  }
}
